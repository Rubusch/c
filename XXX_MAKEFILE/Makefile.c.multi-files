## .h and .c files

TARGET = NAME.exe

SRC = main.c sourcefilename.c
HEADERS = headername.h
OBJECTS = $(SOURCE:%.c=%.o)
CC = gcc
CFLAGS += -g -Wall -Werror -std=c99 -pedantic
RM = rm -f

%.o: %.c
	$(CC) -c $(CFLAGS) $<


# all always on top!
all: $(TARGET)

$(TARGET): $(OBJECTS)
	$(CC) -o $@ $(OBJECTS) -lm

clean:
	$(RM) $(OBJECTS) $(TARGET) *~

.PHONY: all clean
